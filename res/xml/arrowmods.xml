<PreferenceScreen 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/arrowmods_title">

	<Preference
            android:key="battery_settings"
            android:fragment="com.android.settings.arrow.StatusBarBattery"
            android:summary="@string/battery_style_summary"
            android:title="@string/battery_style_title" />

	<Preference
            android:key="clock_settings"
            android:title="@string/status_bar_clock"
            android:summary="@string/status_bar_clock_summary"
            android:fragment="com.android.settings.arrow.ClockDateSettings" />

        <PreferenceScreen
            android:key="hardware_keys"
            android:title="@string/hardware_keys"
            android:summary="@string/hardware_keys_summary"
            android:fragment="com.android.settings.arrow.HardwareKeys" />

        <PreferenceScreen
            android:key="navigation_keys"
            android:title="@string/navigation_keys"
            android:summary="@string/navigation_keys_summary"
            android:fragment="com.android.settings.arrow.NavigationBar" />

        <Preference
            android:key="qs_rows_columns"
            android:fragment="com.android.settings.arrow.QsRowsColumns"
            android:summary="@string/qs_rows_columns_summary"
            android:title="@string/qs_rows_columns_title"/>

	<Preference
            android:key="systemui_tuner_statusbar"
            android:title="@string/statusbar_items_category" >
            <intent android:action="android.intent.action.MAIN"
                android:targetPackage="com.android.systemui"
                android:targetClass="com.android.systemui.tuner.StatusbarItemsActivity" />
	</Preference>

         <Preference
            android:key="weather"
            android:fragment="com.android.settings.arrow.Weather"
            android:summary="@string/weather_config_summary"
            android:title="@string/weather_title" />

</PreferenceScreen>
